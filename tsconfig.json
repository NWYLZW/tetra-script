{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "allowJs": true,
    "removeComments": true,

    "esModuleInterop": true,
    "outDir": "static/js/lib/tetra-script",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
