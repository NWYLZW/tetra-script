{
  "compilerOptions": {
    "module": "amd",
    "target": "es5",
    "allowJs": true,
    "removeComments": true,

    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "tetra-script/*": [
        "src/*"
      ],
      "tetra-script": [
        "src/index"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
